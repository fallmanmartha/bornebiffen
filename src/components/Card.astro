---
import Heading from "./Heading.astro";
import Text from "./Text.astro";
import Button from "./Button.astro";

const {
  url = "#",
  cardimage = "",
  cardimagealt = "",
  cardtitle = "",
  cardtid = "",
  cardbue = "", // billede af buen
} = Astro.props;
---

<a href="/single" class="block max-w-2sm hover:scale-105 transition">
  <div class="rounded-3xl overflow-hidden bg-cards-bg-primary shadow-lg relative flex flex-col h-96">
    <!-- Top-billede -->
    <div class="h-48 w-full overflow-hidden">
      <img src={cardimage} alt={cardimagealt} class="w-full h-full object-cover" />
    </div>

    <!-- BUE billedet -->
    <img src={cardbue} alt="Dekorativ bue" class="w-full -mt-3 pointer-events-none select-none" />

    <!-- Content -->
    <div class="px-6 pb-6 pt-2 flex flex-col flex-grow">
      <!-- Titel: Max 2 linjer, ens højde -->
      <Heading htmlheading="h5" size="xsmall" font="heading" color="light" weight="bold" class="mb-6 line-clamp-2 min-h-10">
        {cardtitle}
      </Heading>

      <!-- Tid + play-knap -->
      <div class="flex items-center justify-between mt-auto">
        <div class="flex items-center gap-2 opacity-90">
          <img src="/watch.svg" alt="Clock icon" class="w-6 h-6" />
          <Text teksttype="brødtekst" weight="regular" font="body">
            {cardtid}
          </Text>
        </div>

        <Button variant="quaternary" size="small" shadow="effect">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" fill="none" stroke="currentColor" stroke-width="2.5" class="w-8 h-8">
            <polygon points="10,7 25,16 10,25" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"></polygon>
          </svg>
        </Button>
      </div>
    </div>
  </div>
</a>
