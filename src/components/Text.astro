---
// Henter parametrene fra Astro.props
const { teksttype = "brødtekst", weight = "regular", font = "body" } = Astro.props;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  brødtekst: "lg:text-computer-p text-mobile-p",
};

const stylingClasses = {
  regular: "font-regular",
};

const fontClasses = {
  body: "font-body",
};
---

<p class:list={[sizeClasses[teksttype], stylingClasses[weight], fontClasses[font]]}><slot /></p>
