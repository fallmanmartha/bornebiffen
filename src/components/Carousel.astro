---
import Card from "./Card.astro";
const { cards = [], maxVisible = 4 } = Astro.props;
const totalCards = cards.length;
---

<section>
  <div
    x-data={`{
      active: 0,
      total: ${totalCards},
      slidesPerView: 1,
      cardWidth: 100,
      maxVisible: ${maxVisible},

      init() {
        const updateSlides = () => {
          const w = this.$el.clientWidth || this.$el.offsetWidth || window.innerWidth;

          if (w >= 1200) {

          this.slidesPerView = Math.min(this.maxVisible, 4);
          } else if (w >= 640) {

            this.slidesPerView = Math.min(this.maxVisible, 3);
          } else if (w >= 550) {

          this.slidesPerView = Math.min(this.maxVisible, 2);
          } else {

          this.slidesPerView = 1.5;
          }

          this.cardWidth = 100 / this.slidesPerView;

          const maxActive = Math.max(0, this.total - Math.ceil(this.slidesPerView));
          if (this.active > maxActive) this.active = maxActive;
        };

        updateSlides();
        window.addEventListener('resize', updateSlides);
      },

      prev() {
        if (this.total <= this.slidesPerView) return;
        this.active = Math.max(this.active - 1, 0);
      },

      next() {
        if (this.total <= this.slidesPerView) return;
        const maxActive = Math.max(0, this.total - Math.ceil(this.slidesPerView));
        this.active = Math.min(this.active + 1, maxActive);
      }
    }`}
    class="relative mt-10 "
  >
    <!-- Karrusel container -->
    <div class="overflow-hidden py-2 -ml-5">
      <div
        class="flex transition-transform duration-500"
        :style="`transform: translateX(-${active * cardWidth}%);`"
      >
        {cards.map((card) => (
          <div
            class="flex-shrink-0 px-3 lg:px-5"
            :style="`width: ${cardWidth}%; max-width: ${cardWidth}%; flex: 0 0 ${cardWidth}%;`"
          >
            <Card
              cardimage={card.image}
              cardimagealt={card.title}
              cardtitle={card.title}
              cardtid={card.tid}
              cardbue={card.bue}
            />
          </div>
        ))}
      </div>
    </div>

    {totalCards > 0 && (
      <>
        <!-- Vänster pil -->
        <button
          class="absolute left-3 lg:-left-15 top-1/2 flex h-15 w-15 -translate-y-1/2 items-center justify-center rounded-full transition hover:scale-105"
          @click="prev()"
        >
          <svg
            class="h-8 w-8 rounded-full bg-button-quaternary-disabled text-main-text-secondary hover:bg-button-quaternary-hover"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m15 19-7-7 7-7"
            />
          </svg>
        </button>

        <!-- Höger pil -->
        <button
          class="absolute right-3 lg:-right-10 top-1/2 flex h-15 w-15 -translate-y-1/2 items-center justify-center rounded-full transition hover:scale-105"
          @click="next()"
        >
          <svg
            class="h-8 w-8 rounded-full bg-button-quaternary-disabled text-main-text-secondary hover:bg-button-quaternary-hover"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m9 5 7 7-7 7"
            />
          </svg>
        </button>
      </>
    )}
  </div>
</section>
