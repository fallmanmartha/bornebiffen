<MainLayout title="BørneBiffen">
  <main class="container mx-auto p-5">
    <section class="text-main-text-primary">
      <!-- SE VIDERE -->
      <section>
        <div>
          <Heading size="large" htmlheading="h2">Se videre</Heading>

          <Carousel cards={continueCards} />
        </div>
      </section>

      <!-- CHARACTERS -->
      <section class="bg-cards-bg-secondary mt-44 rounded-4xl px-15 pt-10 pb-15">
        <Heading color="dark" size="large" htmlheading="h2">Se film efter karakter</Heading>

        <!-- CHARACTERS ICONS-->
        <div class="grid lg:grid-cols-6 gap-10 grid-cols-2 mt-10">
          <!-- Circleline-->
          <div class="flex flex-col items-center text-center justify-between hover:scale-105 transition">
            <img class="" src="/circleline.png" alt="Circleline" />
            <Heading color="dark" size="xsmall" htmlheading="h5">Circleline</Heading>
          </div>

          <!-- Birds-->
          <div class="flex flex-col items-center text-center justify-between hover:scale-105 transition">
            <img class="" src="/birds.png" alt="Birds" />
            <Heading color="dark" size="xsmall" htmlheading="h5">Birds</Heading>
          </div>

          <!-- Hunden LB-->
          <div class="flex flex-col items-center text-center justify-between hover:scale-105 transition">
            <img class="" src="/hunden.png" alt="Hunden lb" />
            <Heading color="dark" size="xsmall" htmlheading="h5">Hunden LB</Heading>
          </div>

          <!-- Lille frø-->
          <div class="flex flex-col items-center text-center justify-between hover:scale-105 transition">
            <img class="" src="/drake.png" alt="Drake" />
            <Heading color="dark" size="xsmall" htmlheading="h5">Lille frø</Heading>
          </div>

          <!-- Vitello-->
          <div class="flex flex-col items-center text-center justify-between hover:scale-105 transition">
            <img class="" src="/vitello.png" alt="Vitello" />
            <Heading color="dark" size="xsmall" htmlheading="h5">Vitello</Heading>
          </div>

          <!-- Snuden-->
          <div class="flex flex-col items-center text-center justify-between hover:scale-105 transition">
            <img class="" src="/snuf.png" alt="Snuden" />
            <Heading color="dark" size="xsmall" htmlheading="h5">Snuden</Heading>
          </div>
        </div>
      </section>

      <!-- MULTI CAROUSELS -->
      <section class="mt-44">
        <Heading size="large" htmlheading="h2">Se flere film & serier</Heading>

        <div class="mt-10">
          <Heading size="medium" htmlheading="h3">For dig</Heading>

          <div class="lg:grid lg:grid-cols-4 lg:gap-5">
            <div class="lg:col-span-1 hidden lg:block w-auto">
              <img src="/foryou.png" alt="for you icon" />
            </div>

            <div class="lg:col-start-2 lg:col-span-3">
              <Carousel cards={foryouCards} />
            </div>
          </div>
        </div>

        <div class="mt-10">
          <Heading size="medium" htmlheading="h3">Eventyr & magi</Heading>

          <div class="lg:grid lg:grid-cols-4 lg:gap-5">
            <div class="lg:col-span-1 hidden lg:block w-auto">
              <img src="/magi.png" alt="for you icon" />
            </div>

            <div class="lg:col-start-2 lg:col-span-3">
              <Carousel cards={magicCards} />
            </div>
          </div>
        </div>

        <div class="mt-10">
          <Heading size="medium" htmlheading="h3">Dyr & natur</Heading>

          <div class="lg:grid lg:grid-cols-4 lg:gap-5">
            <div class="lg:col-span-1 hidden lg:block w-auto">
              <img src="/nature.png" alt="for you icon" />
            </div>

            <div class="lg:col-start-2 lg:col-span-3">
              <Carousel cards={natureCards} />
            </div>
          </div>
        </div>

        <div class="mt-10">
          <Heading size="medium" htmlheading="h3">Læring & verden</Heading>

          <div class="lg:grid lg:grid-cols-4 lg:gap-5">
