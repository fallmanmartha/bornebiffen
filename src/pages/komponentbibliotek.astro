---
import MainLayout from "../layouts/MainLayout.astro";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Link from "../components/Link.astro";
import Button from "../components/Button.astro";
import Tag from "../components/Tag.astro";
import Card from "../components/Card.astro";
import Faqcard from "../components/Faqcard.astro";
import Infocard from "../components/Infocard.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout title="Titel">
  <main class="container mx-auto p-4 text-main-text-primary">
    <Heading htmlheading="h1" size="large">Komponentbibliotek</Heading>
    <Text stylingclasses="italic">Her kan du finde alle de komponenter, der er brugt i dette projekt.</Text>
    <hr class="my-4" />
    <!-- start på typografi -->
    <section>
      <Heading htmlheading="h2" size="medium">Typografi & ovesrkrifter</Heading>
      <Text>Her kan du finde alle de komponenter, der er brugt i dette projekt.</Text>
      <Heading htmlheading="h1" size="xlarge">h1 - xlarge - sans</Heading>
      <Heading htmlheading="h2" size="large">h2 - large - sans</Heading>
      <Heading htmlheading="h3" size="medium">h3 - medium - sans</Heading>
      <Heading htmlheading="h4" size="small">h4 - small - sans</Heading>
      <Heading htmlheading="h5" size="xsmall">h5 - xsmall - sans</Heading>

      <Text teksttype="brødtekst">
        Her er en sektion brødtekst: Lorem ipsum dolor, sit amet consectetur adipisicing elit. Ullam dolorem doloremque commodi eaque quisquam quasi recusandae veniam. Corporis totam <Link href="#">Default link: </Link> reiciendis quibusdam ratione iure
        aut, numquam tenetur voluptatem exercitationem sequi enim!
      </Text>
    </section>
    <!-- slut på typografi -->
    <hr class="my-4" />
    <!-- Link komponent instanser -->
    <section>
      <Heading htmlheading="h2" size="medium">Links</Heading>
      <Text teksttype="brødtekst"><Link href="#">Default link: </Link>Default linket er en del af en tekst, og burde gerne fungere som et <Link href="#">link</Link> i en paragraf.</Text>
      <Text><Link href="#" variant="primary">Link variant: primary</Link></Text>
      <Text><Link href="#" variant="primary" size="small">Link variant: primary size small</Link></Text>
      <Text><Link href="#" variant="primary" size="medium">Link variant: primary size medium</Link></Text>
      <Text><Link href="#" variant="primary" size="large">Link variant: primary size large</Link></Text>
      <Text><Link href="#" variant="secondary" size="small">Link variant: secondary size small</Link></Text>
      <Text><Link href="#" variant="secondary" size="medium">Link variant: secondary size medium</Link></Text>
      <Text><Link href="#" variant="secondary" size="large">Link variant: secondary size large</Link></Text>
    </section>
    <!-- Slut på Link komponent instanser -->
    <hr class="my-4" />
    <!-- Buttons komponent instanser -->
    <section>
      <Heading htmlheading="h2" size="medium">Buttons</Heading>
      <Heading><Button>Default knap</Button></Heading>
      <Heading><Button variant="primary" size="small" shadow="effect">Button variant: primary size small</Button></Heading>
      <Heading><Button variant="primary" size="large" shadow="effect">Button variant: primary size large</Button></Heading>

      <Heading><Button variant="secondary" size="small" shadow="effect">Button variant: secondary size small</Button></Heading>
      <Heading><Button variant="secondary" size="large" shadow="effect">Variant: secondary size large</Button></Heading>

      <Heading><Button variant="third" size="small" shadow="effect">Button variant: secondary size small</Button></Heading>
      <Heading><Button variant="third" size="large" shadow="effect">Variant: secondary size large</Button></Heading>

      <Heading><Button variant="quaternary" size="small" shadow="effect">Button variant: secondary size small</Button></Heading>
      <Heading><Button variant="quaternary" size="large" shadow="effect">Variant: secondary size large</Button></Heading>
    </section>

    <section>
      <Heading><Button variant="primary" size="small" shadow="noeffect">Button variant: primary size small</Button></Heading>
      <Heading><Button variant="primary" size="large" shadow="noeffect">Button variant: primary size large</Button></Heading>

      <Heading><Button variant="secondary" size="small" shadow="noeffect">Button variant: secondary size small</Button></Heading>
      <Heading><Button variant="secondary" size="large" shadow="noeffect">Variant: secondary size large</Button></Heading>

      <Heading><Button variant="third" size="small" shadow="noeffect">Button variant: secondary size small</Button></Heading>
      <Heading><Button variant="third" size="large" shadow="noeffect">Variant: secondary size large</Button></Heading>

      <Heading><Button variant="quaternary" size="small" shadow="noeffect">Button variant: secondary size small</Button></Heading>
      <Heading><Button variant="quaternary" size="large" shadow="noeffect">Variant: secondary size large</Button></Heading>
    </section>
    <hr class="my-4" />

    <section>
      <Heading htmlheading="h2" size="medium">Tags</Heading>
      <div class="mt-10">
        <Text><Tag variant="primary" shadow="effect">Tag variant: Primary</Tag></Text>
      </div>
      <div class="mt-10">
        <Text><Tag variant="secondary" shadow="effect">Tag variant: Secondary</Tag></Text>
      </div>
    </section>
    <!-- Slut på Buttons komponent instanser -->

    <hr class="my-4" />
    <!-- start på typografi -->
    <section>
      <Heading htmlheading="h2" size="medium">Cards</Heading>
      <div class="lg:grid lg:grid-cols-3 gap-10 mt-10">
        <Card cardimage="/lillefro.webp" cardimagealt="By om natten" cardtitle="Filmenavn" cardtid="X min" cardbue="/buelillacard.png" />
        <Faqcard
          title="Spørgsmål?"
          content="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
          wave="/faqbue2.svg"
        />

        <Infocard title="Overskrift" content="Via dit bibliotekslogin kan I nemt streame flere hundrede håndplukkede kortfilm, helt gratis og sikkert. Et trygt og kreativt univers for familien." image="/info3.svg" />
      </div>
      <hr class="my-4" />
    </section>
  </main>
</MainLayout>
